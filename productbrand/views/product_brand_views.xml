<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--List view-->
    <record id="product_brand_list_view" model="ir.ui.view">
        <field name="name">list</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <list string="ProductBrandList">
                <field name="brand"/>
            </list>
        </field>
    </record>

    <!--Form view-->
    <record id="product_brand_form_view" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="ProductBrandForm">
                <sheet>
                <h1><h1><field name="brand"/></h1></h1>
                </sheet>
            </form>
        </field>
    </record>

    <!--Menus-->
    <menuitem id="pos_product_brand_menu_action" parent="point_of_sale.pos_config_menu_catalog" action="product_brand_model_action" name="Product Brands" sequence="11"/>

  <!--Action-->
    <record id="product_brand_model_action" model="ir.actions.act_window">
         <field name="name">Test action</field>
         <field name="res_model">product.brand</field>
         <field name="view_mode">list,form</field>
    </record>

</odoo>