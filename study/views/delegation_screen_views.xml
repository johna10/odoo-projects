<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!--List view-->
    <record id="deligation_screen_list_view" model="ir.ui.view">
        <field name="name">list</field>
        <field name="model">delegation.screen</field>
        <field name="arch" type="xml">
            <list string="DeligationScreenList">
                <field name="size"/>
            </list>
        </field>
    </record>

    <!--Form View-->
    <record id="deligation_screen_form_view" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">delegation.screen</field>
        <field name="arch" type="xml">
            <form string="DeligationSreenForm">
                <sheet>
                    <group>
                        <group>
                            <field name="size"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Action-->
    <record id="deligation_screen_model_action" model="ir.actions.act_window">
         <field name="name">Deliation screen</field>
         <field name="res_model">delegation.screen</field>
         <field name="view_mode">list,form</field>
    </record>

</odoo>