<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="clear_cart_button" inherit_id="website_sale.cart" customize_show="True" name="Clear Cart">
        <xpath expr="//div[contains(@class, 'clearfix')]" position="before">
            <div class="mt-2">
                <button id="clear_cart_button" class="js_delete_all_product btn btn-primary"
                        invisible="hide" style="width: 200px;"> Clear Cart
                    <i class="fa fa-trash-o"></i>
                </button>
            </div>
        </xpath>
    </template>
</odoo>
